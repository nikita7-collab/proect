#include <iostream>
using namespace std;

int main() {
    int a_1 = 10, a_2 = 20, a_3 = 30, a_4 = 40, a_5 = 50;
    short s_1 = 1, s_2 = 2, s_3 = 3, s_4 = 4, s_5 = 5;
    float f_1 = 1.1f, f_2 = 2.2f, f_3 = 3.3f, f_4 = 4.4f, f_5 = 5.5f;
    double d_1 = 1.11, d_2 = 2.22, d_3 = 3.33, d_4 = 4.44, d_5 = 5.55;
    char c_1 = 'A', c_2 = 'B', c_3 = 'C', c_4 = 'D', c_5 = 'E';

    cout << "a_1 = " << a_1 << " | тип: int, размер: " << sizeof(a_1) << "." << endl;
    cout << "a_2 = " << a_2 << " | тип: int, размер: " << sizeof(a_2) << "." << endl;
    cout << "a_3 = " << a_3 << " | тип: int, размер: " << sizeof(a_3) << "." << endl;
    cout << "a_4 = " << a_4 << " | тип: int, размер: " << sizeof(a_4) << "." << endl;
    cout << "a_5 = " << a_5 << " | тип: int, размер: " << sizeof(a_5) << "." << endl;

    cout << "s_1 = " << s_1 << " | тип: short, размер: " << sizeof(s_1) << "." << endl;
    cout << "s_2 = " << s_2 << " | тип: short, размер: " << sizeof(s_2) << "." << endl;
    cout << "s_3 = " << s_3 << " | тип: short, размер: " << sizeof(s_3) << "." << endl;
    cout << "s_4 = " << s_4 << " | тип: short, размер: " << sizeof(s_4) << "." << endl;
    cout << "s_5 = " << s_5 << " | тип: short, размер: " << sizeof(s_5) << "." << endl;

    cout << "f_1 = " << f_1 << " | тип: float, размер: " << sizeof(f_1) << "." << endl;
    cout << "f_2 = " << f_2 << " | тип: float, размер: " << sizeof(f_2) << "." << endl;
    cout << "f_3 = " << f_3 << " | тип: float, размер: " << sizeof(f_3) << "." << endl;
    cout << "f_4 = " << f_4 << " | тип: float, размер: " << sizeof(f_4) << "." << endl;
    cout << "f_5 = " << f_5 << " | тип: float, размер: " << sizeof(f_5) << "." << endl;

    cout << "d_1 = " << d_1 << " | тип: double, размер: " << sizeof(d_1) << "." << endl;
    cout << "d_2 = " << d_2 << " | тип: double, размер: " << sizeof(d_2) << "." << endl;
    cout << "d_3 = " << d_3 << " | тип: double, размер: " << sizeof(d_3) << "." << endl;
    cout << "d_4 = " << d_4 << " | тип: double, размер: " << sizeof(d_4) << "." << endl;
    cout << "d_5 = " << d_5 << " | тип: double, размер: " << sizeof(d_5) << "." << endl;

    cout << "c_1 = " << c_1 << " | тип: char, размер: " << sizeof(c_1) << "." << endl;
    cout << "c_2 = " << c_2 << " | тип: char, размер: " << sizeof(c_2) << "." << endl;
    cout << "c_3 = " << c_3 << " | тип: char, размер: " << sizeof(c_3) << "." << endl;
    cout << "c_4 = " << c_4 << " | тип: char, размер: " << sizeof(c_4) << "." << endl;
    cout << "c_5 = " << c_5 << " | тип: char, размер: " << sizeof(c_5) << "." << endl;

    return 0;
}
