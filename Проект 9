#include <iostream>

#include <limits>

using namespace std;



int main() {
    setlocale(0, "");
    int n;
    while (true) {

        cout << "Введите число: ";

        if (!(cin >> n)) { // нечисловой ввод

            cout << "Ошибка ввода." << endl;

            cin.clear();

            cin.ignore(numeric_limits<streamsize>::max(), '\n');

            continue;

        }



        if (n == 0) break; // выход из программы



        if (n < 0 || n > 15) {

            cout << "Ошибка." << endl;

            continue;

        }



        cout << "Цикл 'WHILE'" << endl;

        int i = 1;

        while (i <= n) {

            cout << "Цикл отработал. Круг: " << i << "." << endl;

            ++i;

        }

    }



    return 0;

}
